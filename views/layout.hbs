<script>

const searchDropdownElement = document.getElementById("mySearchDropdown")
const goButtonElement = document.querySelector('.go-button')
const searchButtonElement = document.querySelector('.search-button')
const megaDropdownElement = document.getElementById('myDropdown')
const categorySearchButtonElement = document.querySelector('.category-search-button')
const serachSortingButtonDivElement = document.querySelector(".search-sorting-button-div")
const categorySortingButtonDivElement = document.querySelector(".category-sorting-button-div")
const navigationMobileTriggerButtonElement = document.getElementById("nav-mobile-trigger");
const navigationContentElement =  document.querySelector(".nav-content");

navigationMobileTriggerButtonElement.addEventListener('click', () => {
  megaDropdownElement.classList.remove('show');
  searchDropdownElement.classList.remove("show");
  navigationContentElement.classList.toggle("nav-mobile-show");
})

 /* When the user clicks on the button, toggle between hiding and showing
the dropdown content */
function megaMenuFunction() {
  megaDropdownElement.classList.toggle('show');
  searchDropdownElement.classList.remove("show");
  navigationContentElement.classList.remove("nav-mobile-show");
}

/* When the user clicks on the button, 
toggle between hiding and showing the dropdown content */
function mySearchFunction() {
  searchDropdownElement.classList.toggle("show");  
  megaDropdownElement.classList.remove("show");
  navigationContentElement.classList.remove("nav-mobile-show");
}

categorySearchButtonElement.addEventListener('click',() => megaMenuFunction());
searchButtonElement.addEventListener('click', () => mySearchFunction())

function hideSearchSortingButtons() {
  if(serachSortingButtonDivElement) serachSortingButtonDivElement.classList.add('show')
  if(categorySortingButtonDivElement) categorySortingButtonDivElement.classList.remove('hide')
}

function hideCategorySortingButtons() {
  if(serachSortingButtonDivElement) serachSortingButtonDivElement.classList.add('show')
  if(categorySortingButtonDivElement) categorySortingButtonDivElement.classList.add('hide')
}
</script>

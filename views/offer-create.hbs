<form
  action="/offer/create"
  method="POST"
  enctype="multipart/form-data"
>
  <label for="input-title">Title</label>
  <input type="text" id="input-title" name="title" placeholder="Your Title" />

 <label for="description-input">Description:
    <textarea id="description-input" name="description" rows="4" cols="50">   
    </textarea></label>

  <div>
    <label for="input-image">Image:
      <input type="file" name="picture" id="input-image" />
    </label>
  </div>

  <div>
  <label for="input-genre">Genre: <br>
      <input type="checkbox" name="genres" value="Installation"/>Installation<br>
      <input type="checkbox" name="genres" value="Painting"/>Painting<br>
      <input type="checkbox" name="genres" value="Media"/>Media<br>
      <input type="checkbox" name="genres" value="Photography"/>Photography<br>
      <input type="checkbox" name="genres" value="Ceramics"/>Ceramics<br>
      <input type="checkbox" name="genres" value="Performing Arts"/>Performing Arts<br>
      <input type="checkbox" name="genres" value="Architecture"/>Architecture<br>
      <input type="checkbox" name="genres" value="Graphics"/>Graphics<br>
      <input type="checkbox" name="genres" value="Other"/>other<br>
   </label>
   </div>

  <div>
  <label for="input-material">Material Category: </br>
      <input type="checkbox" name="materials" value="wood"/>wood</br>
      <input type="checkbox" name="materials" value="metal"/>metal</br>
      <input type="checkbox" name="materials" value="plastic"/>plastic</br>
      <input type="checkbox" name="materials" value="paper / cardboard"/>paper / cardboard</br>
      <input type="checkbox" name="materials" value="pens / brushes"/>pens / brushes</br>
      <input type="checkbox" name="materials" value="paints"/>paints</br>
      <input type="checkbox" name="materials" value="textile"/>textile</br>
      <input type="checkbox" name="materials" value="stone / building materials"/>stone / building materials</br>
      <input type="checkbox" name="materials" value="moulding / casting"/>moulding / casting</br>
      <input type="checkbox" name="materials" value="tools"/>tools</br>
      <input type="checkbox" name="materials" value="technical equipment"/>technical equipment</br>
      <input type="checkbox" name="materials" value="studio furniture"/>studio furniture</br>
      <input type="checkbox" name="materials" value="other"/>other</br>
    </label>
    </div>

  <label for="input-location">Location:
    <select name="location" placeholder="">
      <option value="Friedrichshain">Friedrichshain</option>
      <option value="Kreuzberg">Kreuzberg</option>
      <option value="Neukölln">Neukölln</option>
      <option value="Britz">Britz</option>
      <option value="Treptow">Treptow</option>
      <option value="Köpenick">Köpenick</option>
      <option value="Marzahn">Marzahn</option>
      <option value="Hellersdorf">Hellersdorf</option>
      <option value="Lichtenberg (Süd)">Lichtenberg (Süd)</option>
      <option value="Lichtenberg (Nord)">Lichtenberg (Nord)</option>
      <option value="Prenzlauer Berg">Prenzlauer Berg</option>
      <option value="Pankow">Pankow</option>
      <option value="Heinersdorf">Heinersdorf</option>
      <option value="Weißensee">Weißensee</option>
      <option value="Mitte">Mitte</option>
      <option value="Wedding">Wedding</option>
      <option value="Reinickendorf">Reinickendorf</option>
      <option value="Charlottenburg">Charlottenburg</option>
      <option value="Wilmersdorf">Wilmersdorf</option>
      <option value="Tempelhof">Tempelhof</option>
      <option value="Schöneberg">Schöneberg</option>
      <option value="Steglitz">Steglitz</option>
      <option value="Zehlendorf">Zehlendorf</option>
      <option value="Spandau">Spandau</option>
      <option value="Schöneweide">Schöneweide</option>
    </select></label>

    <label for="input-price">Price:
    <input type="number" id="input-price" name="price" placeholder="0" /></label>

    <label for="input-price">Alternative Payments:
    <textarea type="text" id="input-payment" name="payment" placeholder="Alternative Payment" rows="2" cols="50">
    </textarea></label>

  <button>Create Offer</button>
</form>
<form
  action="/offer/{{offer._id}}/edit"
  method="POST"
  enctype="multipart/form-data"
>
  <label for="input-title">Title</label>
  <input type="text" id="input-title" name="title" placeholder="Your Title" value="{{offer.title}}"/>

 <label for="description-input">Description:
    <textarea id="description-input" name="description" rows="4" cols="50">{{offer.description}}   
    </textarea></label>

  <div>{{#if offer.picture}}
    <img src="{{offer.picture}}" alt="Existing picture">
    {{/if}}
    <label for="input-image">Image:
      <input type="file" name="picture" id="input-image" />
    </label>
  </div>

  <div>
  <label for="input-genre">Genre: <br>
      <input type="checkbox" name="genres" value="Installation"{{#if offer.Installation}}checked {{/if}}/>Installation<br>
      <input type="checkbox" name="genres" value="Painting"{{#if offer.Painting}}checked {{/if}} />Painting<br>
      <input type="checkbox" name="genres" value="Media"{{#if offer.Media}}checked {{/if}}/>Media<br>
      <input type="checkbox" name="genres" value="Photography"{{#if offer.Photography}}checked {{/if}}/>Photography<br>
      <input type="checkbox" name="genres" value="Ceramic"{{#if offer.Ceramic}}checked {{/if}}/>Ceramic<br>
      <input type="checkbox" name="genres" value="PerformingArts"{{#if offer.PerformingArts}}checked {{/if}}/>Performing Arts<br>
      <input type="checkbox" name="genres" value="Architecture"{{#if offer.Architecture}}checked {{/if}}/>Architecture<br>
      <input type="checkbox" name="genres" value="Graphics"{{#if offere.Graphics}}checked {{/if}}/>Graphics<br>
      <input type="checkbox" name="genres" value="Other"{{#if offere.Other}}checked {{/if}}/>Other<br>
   </label>
   </div>

  <div>
  <label for="input-material">Material Category: </br>
      <input type="checkbox" name="materials" value="wood"{{#if offer.wood}}checked {{/if}} />wood</br>
      <input type="checkbox" name="materials" value="metal" {{#if offer.metal}} checked {{/if}}/>metal</br>
      <input type="checkbox" name="materials" value="plastic"{{#if offer.plastic}}checked {{/if}}/>plastic</br>
      <input type="checkbox" name="materials" value="paper"{{#if offer.paper}}checked {{/if}}/>paper</br>
      <input type="checkbox" name="materials" value="pens"{{#if offer.pens}}checked {{/if}}/>pens / brushes</br>
      <input type="checkbox" name="materials" value="paints"{{#if offer.paints}}checked {{/if}}/>paints</br>
      <input type="checkbox" name="materials" value="textile"{{#if offer.textile}}checked {{/if}}/>textile</br>
      <input type="checkbox" name="materials" value="stone"{{#if offer.stone}}checked {{/if}}/>stone / building materials</br>
      <input type="checkbox" name="materials" value="moulding"{{#if offer.moulding}}checked {{/if}}/>moulding / casting</br>
      <input type="checkbox" name="materials" value="tools"{{#if offer.tools}}checked {{/if}}/>tools</br>
      <input type="checkbox" name="materials" value="technicalEquipment"{{#if offer.technicalEquipment}}checked {{/if}}/>technical Equipment</br>
      <input type="checkbox" name="materials" value="studioFurniture"{{#if offer.studioFurniture}}checked {{/if}}/>studio Furniture</br>
      <input type="checkbox" name="materials" value="other"{{#if offer.other}}checked {{/if}}/>other</br>
    </label>
    </div>

  <label for="input-location">Location:
    <select name="location" placeholder="">
      <option value="Friedrichshain">Friedrichshain</option>
      <option value="Kreuzberg">Kreuzberg</option>
      <option value="Neukölln">Neukölln</option>
      <option value="Britz">Britz</option>
      <option value="Treptow">Treptow</option>
      <option value="Köpenick">Köpenick</option>
      <option value="Marzahn">Marzahn</option>
      <option value="Hellersdorf">Hellersdorf</option>
      <option value="Lichtenberg (Süd)">Lichtenberg (Süd)</option>
      <option value="Lichtenberg (Nord)">Lichtenberg (Nord)</option>
      <option value="Prenzlauer Berg">Prenzlauer Berg</option>
      <option value="Pankow">Pankow</option>
      <option value="Heinersdorf">Heinersdorf</option>
      <option value="Weißensee">Weißensee</option>
      <option value="Mitte">Mitte</option>
      <option value="Wedding">Wedding</option>
      <option value="Reinickendorf">Reinickendorf</option>
      <option value="Charlottenburg">Charlottenburg</option>
      <option value="Wilmersdorf">Wilmersdorf</option>
      <option value="Tempelhof">Tempelhof</option>
      <option value="Schöneberg">Schöneberg</option>
      <option value="Steglitz">Steglitz</option>
      <option value="Zehlendorf">Zehlendorf</option>
      <option value="Spandau">Spandau</option>
      <option value="Schöneweide">Schöneweide</option>
    </select></label>

    <label for="input-price">Price:
    <input type="number" id="input-price" name="price" placeholder="0" /></label>

    <label for="input-price">Alternative Payments:
    <textarea type="text" id="input-payment" name="payment" placeholder="Alternative Payment" rows="2" cols="50">
    </textarea></label>

  <button>Update Offer</button>
</form>
 {{>navbar}}

<div class="offer-single">
<h1>
  {{offer.title}}
</h1>

{{#each offer.picture}}
<img src="{{this}}" alt="photo of object" />
{{/each}}

<a href="/user/{{ offer.creator._id }}">
<p>{{offer.creator.name}}</a> | {{date offer.createdAt}}</p>


<p><strong>Genres</strong>: {{#each offer.genres}}  {{this}} {{#unless @last}},{{/unless}}</p>
{{/each}}
<p><strong>Material</strong>: {{#each offer.materials}}  {{this}} {{#unless @last}},{{/unless}}</p>
{{/each}}
<p>{{offer.description}}</p>
<p>
 <strong>Location</strong>: {{offer.location}}
</p>

{{#if offer.price}}
<p>Price: {{offer.price}} â‚¬</p>

{{else}}
<h3>{{offer.alternativepayment}}</h3>
{{/if}}

{{#if userIsOwner}}
<form action="/offer/{{offer._id}}/edit" >
  <button>Edit</button>
</form>

<form action="/offer/{{ offer._id}}/delete" method="POST">
  <button>Deactivate this offer</button>
</form>

{{else}}
{{!-- <form action="/offer/{{ offer._id}}/offer-email"> --}}
<form action="/email/{{ offer._id}}/send-email">
<div class="go-button-wrapper">
  <button class="go-button centered">Send Email</button>
</div>
</form>
{{/if}}
</div>
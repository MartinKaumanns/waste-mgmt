<div class="offer-create">
  <form
    method="POST"
    enctype="multipart/form-data"
  >
  <div>
    <label for="input-name">Name
    <input type="text" id="input-name" name="name" placeholder="Your Name" value="{{user.name}}" class="nav-btn"/>
    </label>
  </div>
  <div>
    <label for="input-email">Email
    <input type="email" id="input-email" name="email" placeholder="Your Email" value="{{user.email}}"class="nav-btn"/>
    </label>
  </div>  
  <div>
      <label for="input-web">Website
      <input type="text" id="input-web" name="web" placeholder="Your Website" value="{{user.web}}"class="nav-btn"/>
      </label>
  </div>
  <div>
      <label for="input-insta">Instagram @
      <input type="text" id="input-insta" name="insta" placeholder="Your Instagram" value="{{user.insta}}"class="nav-btn"/>
      </label>
  </div>
  <div>
    {{#if user.picture}}
    <img src="{{user.picture}}" alt="Existing picture" class="preview-pic">
    {{/if}}
    <label for="input-image" class="custom-file-upload">Update image
      <input type="file" name="picture" id="input-image" />
    </label>
  </div>
</div>
<h3 class="offer-label" >Change the genre you are working in </h3>
